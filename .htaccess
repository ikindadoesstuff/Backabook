ErrorDocument 404 /error.php

RewriteEngine On
RewriteBase /api/
# Allow static files to bypass the rewrite rules
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|otf|webp|mp4|webm|ogg|json)$ ../$0 [L]

# Ensure the rewrite rules work outside the /api/ folder
RewriteRule ^index\\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]